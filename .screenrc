defutf8 on
startup_message off
deflogin on
vbell off
vbell_msg "vbell %n "
defscrollback 11264
altscreen on
autodetach on
termcapinfo xterm* ti@:te@
shelltitle '$ |'
bind ^k
bind ^\
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history
caption always "%{= dw}%-w%{=b .B}%n %t%{-}%+w"
term "screen-256color"
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on
defnonblock 5
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1
